
<% layout("/layouts/boilerplate") %>
<section class="py-20 px-4 md:px-8 lg:px-12">
  <div class="max-w-5xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="flex items-center justify-center animate-fade-right animate-once animate-duration-[800ms] animate-delay-200">
      <img
        src="<%= data.img_url %>"  alt="Profile Photo"
        class="rounded-full w-[300px] h-[300px] object-cover"
        width="300"
        height="300"
        style="aspect-ratio: 300 / 300; object-fit: cover;"
      />
    </div>
    <div class="space-y-4 animate-fade-left animate-once animate-duration-[800ms] animate-delay-200">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1e3a8a]">About Me</h2>
      <p class="text-lg md:text-xl">
        <%= data.para %>  </p>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <h3 class="text-lg font-bold">Education</h3>
          <p><%= data.education.degree %></p>
          <p><%= data.education.university %>, <%= data.education.year %></p> </div>
        <div>
          <h3 class="text-lg font-bold">Work History</h3>
          <p><%= data.work.position %></p>
          <p><%= data.work.company %>
            <%= data.work.from %></p>
        </div>
      </div>
    </div>
  </div>
</section>
